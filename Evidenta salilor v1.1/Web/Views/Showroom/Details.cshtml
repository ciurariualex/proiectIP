@model Web.Models.Showroom.ShowroomDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @disabled = "disabled" })
            <div class="col-md-4">
                @for (int i = 0; i < Model.Cars.Count; i++)
                {
                    <b>Car @(i + 1): </b>
                    <div class="form-group" style="padding-left:20px;width:20em">
                        @Html.LabelFor(model => model.Cars[i].Brand)
                        @Html.TextBoxFor(model => model.Cars[i].Brand, new { @class = "form-control", @disabled = "disabled" })

                        @Html.LabelFor(model => model.Cars[i].Model)
                        @Html.TextBoxFor(model => model.Cars[i].Model, new { @class = "form-control", @disabled = "disabled" })

                        @Html.LabelFor(model => model.Cars[i].VIN)
                        @Html.TextBoxFor(model => model.Cars[i].VIN, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
