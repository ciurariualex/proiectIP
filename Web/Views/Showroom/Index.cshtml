@model Web.Models.Showroom.ShowroomListViewModel

@{
    ViewData["Title"] = "Showrooms";
}

<h2>Showrooms</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.TotalItemCount > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
            <tr>
                <td colspan="5" align="left">
                    <pager list="@Model"
                           asp-controller="Showroom"
                           asp-action="Index" />
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    @Html.Partial("_GridNoData")
}