
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UploadXML</title>
</head>
<body>
    <form asp-action="UploadXML" enctype="multipart/form-data">
        <div class="col-sm-7 col-md-7 col-lg-7" id="fileInfo">
            <div class="col-sm-6 col-lg-6">
                <span class="btn btn-default btn-file" id="uploadBtn">
                    Upload
                    <input type="file" name="file" id="file" />
                </span>
                <button type="submit" id="submit" class="btn btn-default">Submit</button>
            </div>
            <div class="col-sm-6 col-lg-6">
                <div class="form-control" style="word-wrap: break-word; display: flex;"><b id="fileName" style="font-size: 0.50vw"></b></div>
            </div>
        </div>
    </form>
</body>
</html>
